<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/centralPanel"
        style="@style/centralPanelStyle"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button1"/>

    <Button
        android:id="@+id/button1"
        style="@style/buttonNumberStyle"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="270dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/button2"
        style="@style/buttonNumberStyle"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="270dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button1" />

    <Button
        android:id="@+id/button3"
        style="@style/buttonNumberStyle"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="270dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button2" />

    <Button
        android:id="@+id/button4"
        style="@style/buttonNumberStyle"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="187dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button5"
        style="@style/buttonNumberStyle"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="187dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button4"/>

    <Button
        android:id="@+id/button6"
        style="@style/buttonNumberStyle"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="187dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button5"/>

    <Button
        android:id="@+id/button7"
        style="@style/buttonNumberStyle"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="104dp"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button8"
        style="@style/buttonNumberStyle"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="104dp"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button7"/>

    <Button
        android:id="@+id/button9"
        style="@style/buttonNumberStyle"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="104dp"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button8"/>

    <Button
        android:id="@+id/buttonPoint"
        style="@style/buttonNumberStyle"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="21dp"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button0"
        style="@style/buttonNumberStyle"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="21dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonPoint"/>

    <Button
        android:id="@+id/buttonEqual"
        style="@style/buttonEqualStyle"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="21dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button0"/>

    <Button
        android:id="@+id/buttonReset"
        style="@style/buttonResetStyle"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="270dp"
        android:text="C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonSum"
        style="@style/buttonSignalStyle"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="3dp"
        android:text="+"
        app:layout_constraintTop_toBottomOf="@id/buttonReset"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonSubtracts"
        style="@style/buttonSignalStyle"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="3dp"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@id/buttonSum"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonMultiplies"
        style="@style/buttonSignalStyle"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="3dp"
        android:text="*"
        app:layout_constraintTop_toBottomOf="@id/buttonSubtracts"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonDivide"
        style="@style/buttonSignalStyle"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="3dp"
        android:text="รท"
        app:layout_constraintTop_toBottomOf="@id/buttonMultiplies"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>